# Environment
ENV=dev
LOG_LEVEL=INFO

# API
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=["http://localhost:8501"]

# Database
DATABASE_URL=sqlite+aiosqlite:///./quantdash.db

# Redis
REDIS_URL=redis://localhost:6379

# Data Provider
DATA_PROVIDER_DEFAULT=yfinance
CACHE_TTL_SECONDS=3600

# Gemini (optional)
GEMINI_API_KEY=your-api-key-here
GEMINI_MODEL=gemini-pro

# Backtest defaults
DEFAULT_FEE_BPS=10
DEFAULT_SLIPPAGE_BPS=5
DEFAULT_TIMEFRAME=1d
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
